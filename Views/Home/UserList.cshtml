@{
    ViewData["Title"] = "User Recommendations";
}

@model IEnumerable<BC_IS413_Assignment4.Models.UserRestaurant>

<div class="container">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr><th scope="col">User Name</th><th scope="col">Restaurant Name</th><th scope="col">Favorite Dish</th><th scope="col">Phone Number</th></tr>
        </thead>

        <tbody>
            @foreach (UserRestaurant res in Model)
            {
                <tr scope="row">
                    <td>@res.UserName</td>
                    <td>@res.RestaurantName</td>
                    <td>@res.FavoriteDish</td>
                    <td>@res.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>