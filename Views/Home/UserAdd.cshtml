@{
    ViewData["Title"] = "Add Restaurant";
}

@model BC_IS413_Assignment4.Models.UserRestaurant;
<div class="container">
    <form asp-action="UserAdd" method="POST">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="RestaurantName">Restaurant Name</label>
            <input asp-for="RestaurantName" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="RestaurantName"></span>
        </div>
        <div class="form-group">
            <label asp-for="FavoriteDish">Favorite Dish</label>
            <input asp-for="FavoriteDish" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="FavoriteDish"></span>
        </div>
        <div class="form-group">
            <span id="phonetext" class="form-text">Please enter as ###-###-####</span>
            <label asp-for="Phone">Phone Number</label>
            <input asp-for="Phone" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<br />
<div class="container">
    <button type="button" class="btn btn-primary" asp-action="UserList">View Other Users Recommendations</button>
</div>